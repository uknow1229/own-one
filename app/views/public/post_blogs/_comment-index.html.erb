<% post_blog.blog_comments.each do |blog_comment| %>
  <div class="post-blog__comment">
    <%= image_tag blog_comment.end_user.get_profile_image(50,50) %>
    <%= blog_comment.end_user.first_name %>
    <%= blog_comment.comment %>
    <%= blog_comment.created_at.strftime('%Y/%m/%d') %>
    <% if blog_comment.end_user == current_end_user %>
      <%= link_to post_blog_blog_comment_path(blog_comment.post_blog, blog_comment),method: :delete, remote: true, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger ms-3" do %>
        <i class="fa-sharp fa-solid fa-minus"></i>
      <% end %>
    <% end %>
  </div>
<% end %>