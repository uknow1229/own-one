<% if post_workout.liked_by?(current_end_user) %>
  <%= link_to post_workout_workout_likes_path(post_workout), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
  <%= post_workout.workout_likes.count %>
  <% end %>
<% else %>
  <%= link_to post_workout_workout_likes_path(post_workout), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
  <%= post_workout.workout_likes.count %>
  <% end %>
<% end %>
