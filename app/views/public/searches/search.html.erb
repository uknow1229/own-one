<div class="search container">
  <div class='row'>
    <% search_word = @q %>
    <% if @post_workout.present? || @post_meal.present? || @post_blog.present? %>
      <h2 class="mt-3">検索結果 "<%= search_word %>"</h2>
      <table class="table border table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% if @post_workout.present? %>
            <% @post_workout.each do |f| %>
              <tr>
                <td><%= image_tag f.get_image(50, 50), class: "image" %></td>
                <td><%= link_to f.title, post_workout_path(f.id) %></td>
              </tr>
            <% end %>
          <% end %>
          <% if @post_meal.present? %>
            <% @post_meal.each do |f| %>
              <tr>
                <td><%= image_tag f.get_image(50, 50), class: "image" %></td>
                <td><%= link_to f.memo, post_meal_path(f.id) %></td>
              </tr>
            <% end %>
          <% end %>
          <% if @post_blog.present? %>
            <% @post_blog.each do |f| %>
              <tr>
                <td><%= image_tag f.get_image(50, 50), class: "image" %></td>
                <td><%= link_to f.title, post_blog_path(f.id) %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <h3 class="mt-3 text-center">検索結果がありません。</h3>
    <% end %>
  </div>
</div>
