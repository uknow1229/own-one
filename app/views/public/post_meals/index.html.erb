<div class="post-meal pt-4">
  <div class="post-meal__index row" style="--bs-gutter-x: none; justify-content: center;">
    <div class="post-meal__header col-sm-8 d-flex justify-content-center">
      <h2>Post Meal</h2>
      <p><%= link_to '投稿する', new_post_meal_path, class: 'btn btn-success mt-4 ms-4' %></p>
    </div>
    <ul class="nav nav-tabs col-sm-8 d-flex justify-content-center mt-4">
      <li class="nav-item">
        <a class="nav-link active" data-bs-toggle="tab" href="#all">全ユーザー</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#followed">フォロー中のユーザー</a>
      </li>
    </ul>
    <div class="tab-content justify-content-center pt-4 d-flex">
      <div class="tab-pane fade show active col-sm-6" id="all">
        <!-- 全ユーザーの投稿を表示 -->
        <% if @post_meals.exists? %>
          <%= render "index", post_meals: @post_meals %>
          <%= paginate @post_meals %>
        <% else %>
          <div class="post-meal__empty-posts pt-4 pb-4">
            <h4 class="text-center pt-4 pb-4">投稿はありません</h4>
            <%= image_tag 'j285_5_1.png', class: 'yet-image rounded-3 img-fluid mx-auto d-block' %>
          </div>
        <% end %> 
      </div>
      <div class="tab-pane fade col-sm-6" id="followed">
        <!-- フォロー中のユーザーの投稿を表示 -->
        <% if @followed_post_meals.exists? %>
          <%= render "index", post_meals: @followed_post_meals %>
          <%= paginate @followed_post_meals %>
        <% else %>
          <div class="post-meal__empty-posts pt-4 pb-4">
            <h4 class="text-center pt-4 pb-4">投稿はありません</h4>
            <%= image_tag 'j285_5_1.png', class: 'yet-image rounded-3 img-fluid mx-auto d-block' %>
          </div>
        <% end %> 
      </div>
    <!--<div class="post-meal__paginate d-flex justify-content-center pt-4">-->
      <%#= paginate @post_meals , theme: 'bootstrap-5' %>
    <!--</div>-->
  </div>
</div>