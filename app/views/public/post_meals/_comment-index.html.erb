<% meal_comments.each do |meal_comment| %>
  <div class="meal-comment d-flex align-items-center mb-2 gap-2">
    <div class="meal-comment__image">
      <%= image_tag meal_comment.end_user.get_profile_image(30,30) %>
    </div>
    <div class="meal-comment__details mb-0">
      <p class="mb-0"><%= link_to meal_comment.end_user.user_name, end_user_path(meal_comment.end_user)  %></p>
      <p class="mb-0"><%= meal_comment.created_at.strftime('%Y/%m/%d') %></p>
    </div>
  </div>
  <div class="meal-comment d-flex justify-content-between">
    <p class="meal-comment__text"><%= meal_comment.comment %></p>
    <div class="meal-comment__action">
      <% if meal_comment.end_user == current_end_user %>
        <%= link_to post_meal_meal_comment_path(meal_comment.post_meal, meal_comment), method: :delete, remote: true,
          data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-danger ms-3" do %>
          <i class="fa-sharp fa-solid fa-trash" style="color: #fbfadb;"></i>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>

