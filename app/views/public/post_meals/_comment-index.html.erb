<% post_meal.meal_comments.each do |meal_comment| %>
  <div class="post-meal__comment">
    <%= image_tag meal_comment.end_user.get_profile_image(50,50)%>
    <%= meal_comment.end_user.first_name %>
    <%= meal_comment.comment %>
    <%= meal_comment.created_at.strftime('%Y/%m/%d') %>
    <% if meal_comment.end_user == current_end_user %>
      <%= link_to post_meal_meal_comment_path(meal_comment.post_meal, meal_comment), method: :delete, remote: true, data: { confirm: "本当に削除しますか？" }, :class => "btn btn-danger ms-3" do %>
        <i class="fa-sharp fa-solid fa-minus"></i>
      <% end %>
    <% end %>
  </div>
<% end %>