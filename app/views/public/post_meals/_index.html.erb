<div class="meal-index d-flex flex-wrap justify-content-center gap-4 pb-4">
  <% post_meals.each do |post_meal| %>
    <div class="meal-index__wrapper p-3">
      <div class="meal-index__image">
        <%= link_to post_meal_path(post_meal), class: 'no-decoration' do %>
          <% if post_meal.image.attached? %>
            <%= image_tag post_meal.image, class: "profile-image" %>
          <% else %>
            <%= image_tag 'noimage.jpg', class: "no-image" %>
          <% end %>
        <% end %>
      </div>
      <p><%= link_to post_meal.end_user.user_name, end_user_path(post_meal.end_user) %></p>
      <p><%= post_meal.memo.truncate(18, omission: "...") %></p>
      <div class="meal-index__details d-flex gap-2">
        <%= " #{time_ago_in_words(post_meal.created_at)}前" %>
        <!-- いいね機能 -->            
        <span id="meal_likes_<%= post_meal.id %>">
          <%= render "public/post_meals/like-btn", post_meal: post_meal %>
        </span>
      </div>
    </div>
  <% end %>
</div>