<div class="user-page mt-4">
  <div class="row justify-content-center">
    <div class="d-flex justify-content-center mb-4">
      <div class="user-page__profile col-sm-5 d-flex align-items-center">
        <%= render "public/end_users/profile", end_user: @end_user, events: @events, post_meals: @post_meals %>
      </div>
      <div class="user-profile__calendar col-sm-3">
        <h4>Posting Calender</h4>
        <div id="calendar">
          <%= render 'public/end_users/calendar', events: @events %>
        </div>
      </div>
    </div>
    <ul class="nav nav-tabs col-sm-8 justify-content-center">
      <li class="nav-item">
        <a class="nav-link active" data-bs-toggle="tab" href="#fitness">Post Fitness</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#meal">Post Meal</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#blog">Post Blog</a>
      </li>
    </ul>
    
    <div class="user-page__wrapper tab-content pt-4 pb-4">
      <div class="user-page__posts justify-content-center tab-pane fade show active" id="fitness">
        <h2 class="text-center">Post Fitness</h2>
        <div class="post_workout d-flex justify-content-center mt-2 pb-4">
          <% if @post_workouts.exists? %>
            <%= render "public/post_workouts/index", post_workouts: @post_workouts  %>
            <div class="user-page__paginate mt-4">
            </div>
          <% else %>
            <div class="user-page__empty-posts">
              <p class="text-center">投稿はありません</p>
              <%= image_tag 'undraw_Post_re_mtr4.png', class: 'yet-image rounded-3 img-fluid' %>
            </div>
          <% end %> 
        </div>
      </div>
      <div class="tab-pane fade justify-content-center" id="meal">
        <h2 class="text-center">Post Meal</h2>
        <div class="posts__meal d-flex justify-content-center mt-2 mb-4">
          <% if @post_meals.exists? %>
            <%= render "public/post_meals/index", post_meals: @post_meals %>
          <% else %>
            <div class="user-page__empty-posts">
              <p class="text-center">投稿はありません</p>
              <%= image_tag 'undraw_Post_re_mtr4.png', class: 'yet-image rounded-3 img-fluid' %>
            </div>
          <% end %> 
        </div>
      </div>
      <div class="tab-pane fade justify-content-center" id="blog">
        <h2 class="text-center">Post Blog</h2>
        <div class="posts__blog d-flex justify-content-center mt-2 mb-4">
          <% if @post_blogs.exists? %>
            <%= render "public/post_blogs/index", post_blogs: @post_blogs  %>
            <div class="user-page__paginate mt-4">
            </div>
          <% else %>
            <div class="user-page__empty-posts">
              <p class="text-center">投稿はありません</p>
              <%= image_tag 'undraw_Post_re_mtr4.png', class: 'yet-image rounded-3 img-fluid' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>