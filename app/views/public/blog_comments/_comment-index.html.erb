<table class="table table-borderless">
  <tbody>
    <% post_blog.blog_comments.each do |blog_comment| %>
      <tr>
        <td><%= image_tag blog_comment.end_user.get_profile_image(50,50) %></td>
        <td><%= blog_comment.end_user.first_name %></td>
        <td><%= blog_comment.comment %></td>
        <td><%= blog_comment.created_at.strftime('%Y/%m/%d') %></td>
        <% if blog_comment.end_user == current_end_user %>
        <td>
          <%= link_to post_blog_blog_comment_path(blog_comment.post_blog, blog_comment),
            method: :delete, remote: true, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger ms-3" do %>
            <i class="fa-sharp fa-solid fa-minus"></i>
          <% end %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

