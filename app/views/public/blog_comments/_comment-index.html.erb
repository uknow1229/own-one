<% post_blog.blog_comments.each do |blog_comment| %>
  <div class="blog-comment d-flex align-items-center mb-2 gap-2">
    <div class="blog-comment__image">
      <%= image_tag blog_comment.end_user.get_profile_image(30,30) %>
    </div>
    <div class="blog-comment__details mb-0">
      <p class="mb-0"><%= link_to blog_comment.end_user.first_name, end_user_path(blog_comment.end_user)  %></p>
      <p class="mb-0"><%= blog_comment.created_at.strftime('%Y/%m/%d') %></p>
    </div>
  </div>
  <div class="blog-comment d-flex justify-content-between">
    <p class="blog-comment__text"><%= blog_comment.comment %></p>
    <div class="blog-comment__action">
      <% if blog_comment.end_user == current_end_user %>
        <%= link_to post_blog_blog_comment_path(blog_comment.post_blog, blog_comment), method: :delete, remote: true,
          data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-danger ms-3" do %>
          <i class="fa-sharp fa-solid fa-trash" style="color: #fbfadb;"></i>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>

